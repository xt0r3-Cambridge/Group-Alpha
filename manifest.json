{
  "manifest_version": 3,
  "name": "AI Hype Monitor",
  "version": "0.1",
  "description": "An addon for detecting overhype about AI in articles or social media",
  "icons": {
  },
  "action": {
    "popup": "html/popup.html",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
        "matches": ["http://*/*"],
        "js": ["main.js", "html/js/card.js"],
        "css": ["html/css/main.css"],
        "html": ["html/card.html"]
    },
    {
        "matches": ["https://*/*"],
        "js": ["main.js", "html/js/card.js"],
        "css": ["html/css/main.css"],
        "html": ["html/card.html"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["http://*/*"],
      "resources": ["other.js", "html/card.html"]
    },
    {
      "matches": ["https://*/*"],
      "resources": ["other.js", "html/card.html"]
    }
  ],
  "permissions": [
    "tabs", "storage"
  ]
}